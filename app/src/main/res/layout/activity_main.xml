<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1E1E1E">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Movies &amp; Shows"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- List of Movies -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Movie Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clipToPadding="false"
                android:clipChildren="false">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/movie_poster_1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Chronicles of Eldoria" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chronicles of Eldoria"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A thrilling tale of ancient magic, unlikely heroes, and the battle for a kingdom."
                        android:textSize="12sp"
                        android:textColor="#BBBBBB"
                        android:layout_marginTop="4dp"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <!-- Rating Stars -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />
                    </LinearLayout>

                    <!-- More Info -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="more info"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginStart="4dp"
                            android:contentDescription="Arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Movie Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/movie_poster_2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Matt" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Matt"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A lone pilfer's journey through a forgotten nebula."
                        android:textSize="12sp"
                        android:textColor="#BBBBBB"
                        android:layout_marginTop="4dp"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="more info"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginStart="4dp"
                            android:contentDescription="Arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Movie Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/movie_poster_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="Cosmic Drift" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cosmic Drift"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A lone pilfer's journey through a forgotten nebula."
                        android:textSize="12sp"
                        android:textColor="#BBBBBB"
                        android:layout_marginTop="4dp"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="more info"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginStart="4dp"
                            android:contentDescription="Arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Movie Item 4 (Title Les) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2D2D2D"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/movie_poster_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="Title Les" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title Les"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                        android:textSize="12sp"
                        android:textColor="#BBBBBB"
                        android:layout_marginTop="4dp"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_filled"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star_outline"
                            android:contentDescription="Star" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="more info"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginStart="4dp"
                            android:contentDescription="Arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>